<?xml version="1.0" encoding="utf-8"?>
<alg:Actionflow xmlns:alg="http://schemas.powershell.ActionFlow.alegri.eu">
  <alg:ActionConfigure>
    
    <!--Example from SharePoint Environment-->
    <alg:Actions Ignore="false">
      <alg:Action ActionDescription="Environment Init" Ignore="false" ActionID="1010">
       <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPEnvironment_Init 
              pathXMLEnvironment="C:\GitRepos\Powershell Action Pack SharePoint Environment\AlegriActionPackSharePointEnvironment\AlegriActionPackSharePointEnvironment\XMLFiles\ExampleEnvironments.xml" 
              pathXMLUserCredential="C:\GitRepos\Powershell Action Pack SharePoint Environment\AlegriActionPackSharePointEnvironment\AlegriActionPackSharePointEnvironment\XMLFiles\ExampleUserCredential.xml"
            />
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
      <alg:Action ActionDescription="Test Environment Connect" Ignore="false" ActionID="1020">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPEnvironment_Connect EnvironmentName="devPat" UserCredentialName="dev_pat" LoadAllWebs="true"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
      <alg:Action ActionDescription="Test Environment InitWeb" Ignore="false" ActionID="1030">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPEnvironment_InitWeb SiteTitle="Testsite for Action Package"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
    </alg:Actions>
  
    <!-- Example for ClearLookup Actions -->
    <alg:Actions Ignore="true">
      <alg:Action ActionDescription="Starte ClearLookup After Provisioning" ActionID="9000" Ignore="false">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPProvisioning_ClearLookupSiteColumnAfterProvisioning pathToProvisioningXML="C:\GitRepos\Powershell_Action_Pack_SharePoint_Provisioning\AlegriActionPackSharePointProvisioning\AlegriActionPackSharePointProvisioning\XMLFiles\ExampleProvisioningClearLookupSiteColumn.xml"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
      <alg:Action ActionDescription="Starte ClearLookup on Content Type" ActionID="9010" Ignore="false">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPProvisioning_ClearLookupSiteColumnOnContentType ContentTypeName="TestContentType" FieldName="MyDokumente" ListName="Formatbibliothek"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
      <alg:Action ActionDescription="Starte ClearLookup on List" ActionID="9020" Ignore="false">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPProvisioning_ClearLookupSiteColumnOnList FieldName="MyDokumente" ListName="Formatbibliothek" ListNameFromField="Test Bibliothek mit Content Type"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
      <alg:Action ActionDescription="Starte ClearLookup Site Column" ActionID="9030" Ignore="false">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPProvisioning_ClearLookupSiteColumn FieldName="MyDokumente" ListName="Formatbibliothek"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
    </alg:Actions>
    
    <!-- Example for RemoveSiteColumns -->
    <alg:Actions Ignore="true">
      <alg:Action ActionDescription="Removed SiteColumn from ContentType" ActionID="690" Ignore="false">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPProvisioning_RemovedSiteColumnFromContentType FieldName="MyDokumente" ContentTypeName="TestContentType" DoNotUpdateChildren="false"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
      <alg:Action ActionDescription="Check if MyDokumente Deleted on ContentType" ActionID="695" Ignore="false">
        <alg:ManuellAction>
          <alg:ManuellTask Aktion="Check if MyDokumente Deleted on ContentType"/>
        </alg:ManuellAction>
      </alg:Action>
      <alg:Action ActionDescription="Removed AllSiteColumn from ContentType" ActionID="690" Ignore="false">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPProvisioning_RemovedSiteColumnFromContentType ContentTypeName="TestContentType" DoNotUpdateChildren="true"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
      <alg:Action ActionDescription="Check if deleted all SiteColumns on ContentType" ActionID="695" Ignore="false">
        <alg:ManuellAction>
          <alg:ManuellTask Aktion="Check if deleted all SiteColumns on ContentType"/>
        </alg:ManuellAction>
      </alg:Action>
      <alg:Action ActionDescription="Test Removed SiteColumn" ActionID="700" Ignore="false">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPProvisioning_RemovedSiteColumn FieldName="MyDokumente"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
      <alg:Action ActionDescription="Check if onnly MyDokumente deleted" ActionID="701" Ignore="false">
        <alg:ManuellAction>
          <alg:ManuellTask Aktion="Check if onnly MyDokumente deleted"/>
        </alg:ManuellAction>
      </alg:Action>
      <alg:Action ActionDescription="Test Removed SiteColumn from Group" ActionID="710" Ignore="false">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPProvisioning_RemovedSiteColumn GroupName="_AP_TestColumn"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
    </alg:Actions>
    
    <!--Example from SharePoint Environment-->
    <alg:Actions Ignore="false">
      <alg:Action ActionDescription="Test Environment Disconnect" Ignore="false" ActionID="2000">
        <alg:AutomationAction>
          <alg:ActionObject>
            <alg:AP_SPEnvironment_Disconnect EnvironmentName="devPat"/>
          </alg:ActionObject>
        </alg:AutomationAction>
      </alg:Action>
    </alg:Actions>
    
  </alg:ActionConfigure>
</alg:Actionflow>